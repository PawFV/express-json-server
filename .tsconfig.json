{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "./build",
    "esModuleInterop": true,
    "strict": false,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types", "./src/TS/*.d.ts"]
  },
  "include": ["src/**/*.ts", "config/**/*.ts", "src/TS/db.d.ts"],
  "exclude": ["node_modules"]
}
